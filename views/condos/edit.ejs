<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Edit: <%= condo.name %></h1>
        <div>
            <form action="/condos/<%= condo._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="condo[name]" value="<%= condo.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="condo[price]" value="<%= condo.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="condo[image]" value="<%= condo.image %>">
                </div>
                <div class="form-group">
                    <textarea rows="10" class="form-control" type="text" name="condo[description]"><%= condo.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
            </form>
            <a href="/condos" class="btn btn-sm btn-info">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>